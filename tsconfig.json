{
  "compilerOptions": {
    "declaration": true,
    "noImplicitAny": true,
    "noEmitOnError": true,
    "noUnusedLocals": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "ES6",
    "allowSyntheticDefaultImports": true,
    "outDir": "./lib",
    "lib": ["DOM", "ES6"],
    "types": []
  },
  "include": ["src/*", "node_modules/@types"]
}
